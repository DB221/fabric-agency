<html>
  <title>Customers</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <style>
    body { background-color: rgb(30, 163, 173); } div.first { background-color:
    white; } div.data { width: 1352px; height: 510px; margin: auto; }
  </style>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      * { box-sizing: border-box; } body { margin: 0; font-family: Arial,
      Helvetica, sans-serif; } .header { overflow: hidden; background-color:
      #fff; padding: 20px 10px; } .header a { float: left; color: rgb(30, 163,
      173); text-align: center; padding: 12px; text-decoration: none; font-size:
      20px; line-height: 25px; border-radius: 4px; font-weight: bold;} .header
      a.logo { font-size: 25px; font-weight: bold; } .header a:hover {
      background-color: #ddd; color: black; } .header a.active {
      background-color: dodgerblue; color: white; } .header-right { float:
      right; } @media screen and (max-width: 500px) { .header a { float: none;
      display: block; text-align: left; } .header-right { float: none; } }
      .row-data { cursor: pointer; } .current {background-color: #ccc;}
    </style>
    <link rel="stylesheet" href="/css/paid.css" />
  </head>

  <body>
    <div class="header">
      <a href="#" class="logo"><i class="fa fa-database"></i></a>
      <a>Fabric Agency</a>
      <div class="header-right">
        <a href="/logout" class="w3-right">Logout</a>
        <button class="w3-button w3-circle w3-black">M</button>
      </div>
    </div>

    <div
      class="w3-sidebar w3-bar-block w3-white w3-xxlarge"
      style="width: 70px"
    >
      <a
        href="/suppliers"
        target="_parent"
        class="w3-bar-item w3-button w3-round-xlarge"
      ><i class="fa fa-user-circle"></i></a>
      <a
        href="/categories"
        target="_parent"
        class="w3-bar-item w3-button w3-round-xlarge"
      ><i class="fa fa-window-restore"></i></a>
      <a
        href="/customers"
        target="_parent"
        class="w3-bar-item w3-button w3-round-xlarge current"
      ><i class="fa fa-users"></i></a>
    </div>

    <div class="w3-container" style="margin-left: 70px">
      <h2 style="font-weight: bold;">Customer {{cCode}}'s report</h2>
      <div class="first w3-container w3-border w3-round-xlarge">

        <div class="data w3-responsive">
          {{#with report}}
            {{#each orders}}
              <h3><strong>{{code}}
                  - Price:
                  {{price}}, Paid:
                  {{history}}</strong></h3>
              <strong>Status:
                <span class="{{status}}">{{status}}</span>
              </strong>
              {{#each categories}}
                <p>â¦¿ Category: {{code}}, Name: {{name}}</p>
              {{/each}}
            {{/each}}
          {{/with}}

        </div>

      </div>
    </div>

    <div class="w3-container w3-display-bottommiddle" style="margin-left: 70px">
      <div class="w3-center">
        <div class="w3-bar">
          {{#with pagin}}
            <a href="{{prev}}" class="w3-button">&laquo;</a>
            {{#each pages}}
              <a href="/customers?page={{this}}" class="w3-button">{{this}}</a>
            {{/each}}
            <a href="{{next}}" class="w3-button">&raquo;</a>
          {{/with}}
        </div>
      </div>
    </div>
  </body>
</html>